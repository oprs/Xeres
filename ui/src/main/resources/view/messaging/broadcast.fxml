<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.xeres.ui.controller.messaging.BroadcastWindowController">
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
    </padding>
    <TextFlow>
        <Text text="Send a message to "/>
        <Text style="-fx-font-weight: bold" text="all"/>
        <Text text=" currently connected friends.&#10;"/>
        <Text fill="red" style="-fx-font-weight: bold;" text="Warning:"/>
        <Text text=" do not abuse this function. Only use it for emergencies or exceptional situations."/>
    </TextFlow>
    <TextArea fx:id="textArea" prefHeight="88.0" prefWidth="384.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="4.0" top="8.0"/>
        </VBox.margin>
    </TextArea>
    <AnchorPane>
        <VBox.margin>
            <Insets top="8.0"/>
        </VBox.margin>
        <Button fx:id="send" mnemonicParsing="false" disable="true" text="Send" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"/>
        <Button fx:id="cancel" layoutY="25.0" mnemonicParsing="false" text="Cancel" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
    </AnchorPane>
</VBox>
