<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.xeres.ui.controller.messaging.BroadcastWindowController" styleClass="base-spacing">
    <TextFlow>
        <Text text="Send a message to "/>
        <Text style="-fx-font-weight: bold" text="all"/>
        <Text text=" currently connected peers.&#10;"/>
        <Text fill="red" style="-fx-font-weight: bold;" text="Warning:"/>
        <Text text=" do not abuse this function. Only use it for emergencies or exceptional situations."/>
    </TextFlow>
    <TextArea fx:id="textArea" prefHeight="88.0" prefWidth="384.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="4.0" top="8.0"/>
        </VBox.margin>
    </TextArea>
    <HBox alignment="TOP_RIGHT">
        <VBox.margin>
            <Insets top="4.0"/>
        </VBox.margin>
        <Button fx:id="send" disable="true" minWidth="72.0" mnemonicParsing="false" text="Send">
            <HBox.margin>
                <Insets right="4.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="cancel" minWidth="72.0" mnemonicParsing="false" text="Cancel">
            <HBox.margin>
                <Insets left="4.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
