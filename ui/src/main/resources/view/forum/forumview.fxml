<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.xeres.ui.controller.forum.ForumViewController">
    <SplitPane fx:id="splitPaneVertical" dividerPositions="0.1" VBox.vgrow="ALWAYS">
        <VBox SplitPane.resizableWithParent="false" VBox.vgrow="ALWAYS">
            <HBox alignment="BASELINE_RIGHT" minHeight="-Infinity" VBox.vgrow="SOMETIMES">
                <VBox.margin>
                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                </VBox.margin>
                <Button fx:id="createForum">
                    <graphic>
                        <FontAwesomeIconView glyphName="PLUS" glyphSize="14"/>
                    </graphic>
                    <tooltip>
                        <Tooltip showDuration="1m" text="Create a new forum"/>
                    </tooltip>
                </Button>
            </HBox>
            <TreeView fx:id="forumTree" minWidth="-Infinity" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
        </VBox>
        <VBox minWidth="200.0" VBox.vgrow="ALWAYS">
            <HBox>
                <VBox.margin>
                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                </VBox.margin>
                <Button fx:id="newThread" text="New Thread" disable="true">
                    <graphic>
                        <FontAwesomeIconView glyphName="PENCIL" glyphSize="14"/>
                    </graphic>
                </Button>
            </HBox>
            <SplitPane fx:id="splitPaneHorizontal" dividerPositions="0.3" orientation="VERTICAL" VBox.vgrow="ALWAYS">
                <TreeTableView fx:id="forumMessagesTreeTableView" minHeight="50.0" prefHeight="150.0">
                    <columns>
                        <!--
                        <TreeTableColumn minWidth="24" prefWidth="24">
                            <graphic>
                                <FontAwesomeIconView glyphName="ENVELOPE" glyphSize="14"/>
                            </graphic>
                        </TreeTableColumn>-->
                        <TreeTableColumn fx:id="treeTableSubject" minWidth="80" prefWidth="200" text="Subject"/>
                        <TreeTableColumn fx:id="treeTableAuthor" minWidth="40" prefWidth="100" text="Author"/>
                        <TreeTableColumn fx:id="treeTableDate" minWidth="40" prefWidth="120" text="Date"/>
                    </columns>
                </TreeTableView>
                <ScrollPane fitToWidth="true" styleClass="scroll-pane-freeflow">
                    <TextFlow fx:id="messageContent" styleClass="freeflow">
                        <padding>
                            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                        </padding>
                    </TextFlow>
                </ScrollPane>
            </SplitPane>
        </VBox>
    </SplitPane>
</VBox>
