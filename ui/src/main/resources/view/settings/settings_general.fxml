<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="12.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.xeres.ui.controller.settings.SettingsGeneralController">
    <TitledPane animated="false" collapsible="false" styleClass="settings-pane" text="%settings.general.system">
        <GridPane hgap="4.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints/>
            </rowConstraints>
            <CheckBox fx:id="autoStartEnabled" disable="true" mnemonicParsing="false" text="%settings.general.startup" GridPane.columnSpan="2147483647">
                <tooltip>
                    <Tooltip showDuration="1m" text="%settings.general.startup.tip"/>
                </tooltip>
            </CheckBox>
            <Label fx:id="autoStartNotAvailable" text="%settings.general.startup.not-available" visible="false" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <font>
                    <Font size="11.0"/>
                </font>
            </Label>
        </GridPane>
    </TitledPane>
</VBox>
