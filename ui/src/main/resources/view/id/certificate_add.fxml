<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="400.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.xeres.ui.controller.id.AddCertificateWindowController">
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
    </padding>
    <Label text="Paste below your friend's ID.">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </Label>
    <TextArea fx:id="certificateTextArea" promptText="Paste friend's ID" VBox.vgrow="SOMETIMES">
        <font>
            <Font name="Consolas" size="12.0"/>
        </font>
        <VBox.margin>
            <Insets top="8.0"/>
        </VBox.margin>
    </TextArea>
    <TitledPane fx:id="titledPane" expanded="false" text="Friend's details" VBox.vgrow="ALWAYS">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="ALWAYS"/>
                <RowConstraints/>
            </rowConstraints>
            <Label text="Name"/>
            <TextField fx:id="certName" editable="false" GridPane.columnIndex="1">
                <tooltip>
                    <Tooltip showDuration="30s" text="Make sure it matches your friend's name or nickname"/>
                </tooltip>
            </TextField>
            <Label text="Profile ID" GridPane.rowIndex="1"/>
            <TextField fx:id="certId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <tooltip>
                    <Tooltip showDuration="30s" text="Unique ID to give a quick and easy way to check if your friend's profile is the right one. If you need absolute certainty, use the fingerprint instead."/>
                </tooltip>
            </TextField>
            <Label text="Fingerprint" GridPane.rowIndex="2"/>
            <TextField fx:id="certFingerprint" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <tooltip>
                    <Tooltip showDuration="30s" text="Cryptographic checksum to certify the authenticity of your friend's profile."/>
                </tooltip>
            </TextField>
            <Label text="Location" GridPane.rowIndex="3"/>
            <TextField fx:id="certLocName" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <tooltip>
                    <Tooltip showDuration="30s" text="Name of your friend's machine (desktop, laptop, server, etc...). Can be used to get an idea of the connectivity expected."/>
                </tooltip>
            </TextField>
            <Label text="Location ID" GridPane.rowIndex="4"/>
            <TextField fx:id="certLocId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <tooltip>
                    <Tooltip showDuration="30s" text="Location identifier. A friend can have several locations but each has a unique ID."/>
                </tooltip>
            </TextField>
            <Label text="Address" GridPane.rowIndex="5"/>
            <ChoiceBox fx:id="certIps" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        </GridPane>
    </TitledPane>
    <HBox alignment="TOP_RIGHT">
        <VBox.margin>
            <Insets top="8.0"/>
        </VBox.margin>
        <Button fx:id="addButton" defaultButton="true" disable="true" minWidth="72.0" mnemonicParsing="false" text="Add">
            <HBox.margin>
                <Insets right="4.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="cancelButton" cancelButton="true" minWidth="72.0" mnemonicParsing="false" text="Cancel">
            <HBox.margin>
                <Insets left="4.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
